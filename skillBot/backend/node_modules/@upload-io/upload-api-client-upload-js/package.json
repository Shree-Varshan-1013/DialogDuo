{
  "name": "@upload-io/upload-api-client-upload-js",
  "version": "2.18.0",
  "description": "Upload API Client (Upload.js Edition)",
  "author": "Bytescale <hello@bytescale.com> (https://www.bytescale.com)",
  "license": "MIT",
  "main": "dist/main.js",
  "types": "dist/index.d.ts",
  "homepage": "https://github.com/bytescale/upload-api-client-upload-js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bytescale/upload-api-client-upload-js.git"
  },
  "bugs": {
    "url": "https://github.com/bytescale/upload-api-client-upload-js/issues"
  },
  "files": [
    "/dist/*"
  ],
  "scripts": {
    "generate": "npm run stubs:generate && npm run stubs:override && npm run stubs:exportXhrHelper",
    "stubs:generate": "openapi --input ../upload/api/src/common/routing/generated/openapi-spec-v3.json --output ./src --useUnionTypes --client xhr && prettier ./src --write --loglevel=silent",
    "stubs:override": "yes | cp -rf ./src-overrides/* ./src",
    "stubs:exportXhrHelper": "echo 'export { request } from \"./core/request\"; // Used by upload-js' >> ./src/index.ts",
    "typecheck": "tsc --noEmit",
    "dist": "rm -rf dist && webpack",
    "prepack": "rm -f upload-api-client-upload-js.tgz && npm run dist",
    "postpack": "[ ! -f upload-api-client-upload-js-*.tgz ] || mv upload-api-client-upload-js-*.tgz upload-api-client-upload-js.tgz",
    "publish:executeIfReleaseCommit": "bash -c 'COMMIT=$(git log -1 --pretty=%B) && [ \"${COMMIT:0:8}\" != \"Release \" ] || npm run publish:execute'",
    "publish:execute": "npm publish && npm run publish:createGitHubRelease",
    "publish:createGitHubRelease": "gh release create v$(node -p \"require('./package.json').version\")"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*/**/*.{ts,tsx}": [
      "bash -c \"tsc --noEmit\""
    ],
    "*.{js,jsx,ts,tsx,json,css,html,md,yaml,yml}": [
      "prettier -c"
    ]
  },
  "devDependencies": {
    "@babel/cli": "7.11.6",
    "@babel/core": "7.11.6",
    "@babel/preset-env": "7.11.5",
    "babel-plugin-transform-async-to-promises": "0.8.15",
    "babel-loader": "8.2.1",
    "husky": "4.3.0",
    "lint-staged": "10.5.1",
    "openapi-typescript-codegen": "0.9.3",
    "prettier": "2.1.2",
    "ts-loader": "8.0.11",
    "typescript": "4.1.2",
    "webpack": "5.5.1",
    "webpack-cli": "4.2.0",
    "webpack-node-externals": "2.5.2"
  }
}
